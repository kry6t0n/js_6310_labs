{
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "*.test.js",
    "__tests__/",
    "jest.config.mjs",
    "start.js"
  ]
}